{
    "editor.fontSize": 14,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "black-formatter.args": [
        "--line-length",
        "92"
    ],
    "flake8.args": [
        "--max-line-length",
        "92"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "python.analysis.disableTaggedHints": true, // https://stackoverflow.com/questions/79107149/pylance-incorrectly-flagging-sklearn-mean-squared-error-function-as-deprecated
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}